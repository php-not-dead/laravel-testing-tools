{
    "name": "php-not-dead/laravel-testing-tools",
    "type": "library",
    "description": "Laravel Testing Tools library",
    "keywords": ["phpunit", "phpcs", "phpcsfixer"],
    "authors": [{
        "name": "Vitalij Vladimirov",
        "email": "vitalij@cto4sale.com",
        "homepage": "https://www.cto4sale.com"
    }],
    "require": {
        "php": "^8.5",
        "opay-dev/php-linting-tools": "1.*",
        "phpunit/phpunit": "12.*",
        "mockery/mockery": "1.*",
        "slevomat/coding-standard": "8.25.1 as 8.15.0",
        "squizlabs/php_codesniffer": "4.0.1 as 3.7"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "laravel/framework": "12.*"
    },
    "autoload": {
        "psr-4": {
            "PhpNotDead\\LaravelTestingTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test"
        }
    },
    "scripts": {
        "lint": [
            "vendor/bin/php-cs-fixer fix . --dry-run --verbose",
            "vendor/bin/phpcs -p --standard=src/Config/phpcs.xml . --ignore=./vendor"
        ],
        "lint:fix": [
            "vendor/bin/php-cs-fixer fix . --verbose",
            "vendor/bin/phpcbf -p --standard=src/Config/phpcs.xml . --ignore=./vendor"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable"
}
